{
  "name": "ct-az-common-alert-endpoint",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/alert-endpoint.js",
  "description": "Azure Function for an HTTP endpoint to receive Azure Monitor alerts that use the Common Alert Schema",
  "scripts": {
    "changelog": "npx conventional-changelog -i CHANGELOG.md -s && git add CHANGELOG.md",
    "func": "cross-env NODE_ENV=development LOCAL_DEV=true func start",
    "func:verbose": "cross-env NODE_ENV=development LOCAL_DEV=true func start --verbose",
    "scratch": "cross-env NODE_ENV=development LOCAL_DEV=true node --trace-warnings ./scratch.js",
    "test": "echo \"No tests yet...\"",
    "version": "npm run changelog"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "ms388@cornell.edu"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/cu-cit-cloud-team/az-common-alert-endpoint/"
  },
  "bugs": {
    "url": "https://github.com/cu-cit-cloud-team/az-common-alert-endpoint/issues"
  },
  "homepage": "https://github.com/cu-cit-cloud-team/az-common-alert-endpoint#readme",
  "engines": {
    "node": ">= 24.x",
    "npm": ">= 11.x"
  },
  "packageManager": "npm@11.10.0",
  "dependencies": {
    "@azure/functions": "4.11.2",
    "@azure/storage-blob": "12.31.0",
    "axios": "1.13.5",
    "dayjs": "1.11.19",
    "dotenv": "17.2.4",
    "turndown": "7.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "azure-functions-core-tools": "4.6.0",
    "conventional-changelog": "7.1.1",
    "conventional-changelog-cli": "5.0.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "cross-env": "10.1.0",
    "cz-git": "1.12.0"
  },
  "overrides": {
    "@conventional-changelog/git-client": "^2.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "release": {
    "preset": "conventionalcommits"
  },
  "volta": {
    "node": "24.13.1",
    "npm": "11.10.0"
  }
}
